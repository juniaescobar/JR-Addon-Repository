<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.jr" name="JR" version="1.0.0" provider-name="JR">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="3.3.0"/>
    <import addon="script.module.urlresolver"  version="2.1.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
    <description lang="en"></description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.jr" name="JR's Addon Repository" version="1.0" provider-name="JR">
	<extension point="xbmc.addon.repository" name="JR's Addon Repository">
		<info compressed="false">http://raw.githubusercontent.com/juniaescobar/JR-Addon-Repository/master/addons.xml</info>
		<checksum>http://raw.githubusercontent.com/juniaescobar/JR-Addon-Repository/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/juniaescobar/JR-Addon-Repository/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install my Addons</summary>
		<description>JR's Repo for Skins and Addons</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
