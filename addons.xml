<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.jr" name="JR" version="1.0.0" provider-name="JR">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="3.3.0"/>
    <import addon="script.module.urlresolver"  version="2.1.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
    <description lang="en"></description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.jr" name="JR's Addon Repository" version="1.0" provider-name="JR">
	<extension point="xbmc.addon.repository" name="JR's Addon Repository">
		<info compressed="false">http://raw.githubusercontent.com/juniaescobar/JR-Addon-Repository/master/addons.xml</info>
		<checksum>http://raw.githubusercontent.com/juniaescobar/JR-Addon-Repository/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/juniaescobar/JR-Addon-Repository/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install my Addons</summary>
		<description>JR's Repo for Skins and Addons</description>
		<platform>all</platform>
	</extension>
</addon>

<addon
  id="skin.jr.helix"
  version="1.0.2"
  name="JR Skin"
  provider-name="JR">
  <requires>
    <import addon="xbmc.gui" version="5.3.0"/>
	<import addon="script.favourites" version="6.0.1"/>
	<import addon="service.skin.widgets" version="0.0.29"/>
	<import addon="service.library.data.provider" version="0.0.4"/>
	<import addon="script.randomandlastitems" version="2.2.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">JR's skin</summary>
    <summary lang="en_US">JR's skin</summary>
    <description lang="en">JR's skin</description>
    <description lang="en_US">JR's skin</description>
    <disclaimer lang="en">You break it - You fix it</disclaimer>
    <disclaimer lang="en_US">You break it - You fix it</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
</addons>
